<% if items %>
    <h2><%= category.humanize %></h2>
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
      </tr>
      </thead>
      <tbody>
      <% items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>