<% if items && !items.empty?%>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><%= category.humanize %></h2>
      </div>

      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
        </tr>
        </thead>
        <tbody>
        <% items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>
